/* pages/riderManage/riderManage.wxss */
Page {
  background: #FFF5EE;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

/* 复用bgManage的订单列表样式 */
.theList .listItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 13rpx 20rpx;
  font-size: 25rpx;
  border-bottom: 1rpx gray dotted;
  background: white;
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
}

.f_column {
  display: flex;
  flex-direction: column;
}

.Btns {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.upBtn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  background-color: rgba(17, 156, 17, 0.767);
  text-align: center;
  border-radius: 10rpx;
  color: white;
  margin: 5rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}