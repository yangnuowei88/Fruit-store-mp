/* pages/riderManage/riderManage.wxss */
Page {
  background: #FFF5EE;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 统计区域样式 */
.stats-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 订单列表容器样式 */
.theList {
  width: 100%;
  margin: 0;
  padding: 0 20rpx;
}

/* 复用bgManage的订单列表样式 */
.theList .listItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  font-size: 25rpx;
  border-bottom: 1rpx gray dotted;
  background: white;
  margin: 10rpx 0;
  border-radius: 0;
}

.f_column {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.Btns {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 50rpx;
  margin-right: 30rpx;
  padding: 10rpx 0;
}

.upBtn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  background-color: rgba(17, 156, 17, 0.767);
  text-align: center;
  border-radius: 10rpx;
  color: white;
}

.callBtn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  background-color: rgba(52, 152, 219, 0.9);
  text-align: center;
  border-radius: 10rpx;
  color: white;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background: white;
  margin: 20rpx 0;
  border-radius: 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}